---
import Layout from "../layouts/Layout.astro";
import CharacterCard from '../components/CharacterCard.astro';

const response = await fetch('https://zzzdatabase-33e18-default-rtdb.firebaseio.com/characters.json');
const characters = await response.json();

interface character {
  name: string;
  age: number;
  description: string;
  height: string;
  image: string;
  rank: string;
  type: string;
}
---

<Layout title="ZZZ Characters">
  <div class="container mx-auto p-8">
    <h1 class="text-4xl font-bold text-valorant mb-8">Zenless Zone Zero (ZZZ) Characters</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {characters.map((character: character) => (
        <CharacterCard
          name={character.name}
          age={character.age}
          description={character.description}
          height={character.height}
          image={character.image}
          rank={character.rank}
          type={character.type}
        />
      ))}
    </div>
  </div>
</Layout>
