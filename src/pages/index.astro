---
//src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import bannerValo from "../assets/VALORANT_logo4.jpg";
import bannerZzz from "../assets/zzz.jpeg";
import CardApis from "../components/CardApis.astro";
import bannerDummyw from "../assets/dummywebp.webp";
import bannerRam from "../assets/ram.webp";
import bannerNode from "../assets/node.jpg";

// Desestructurando el contexto de Netlify desde Astro.locals
const {
  geo: {
    city,
    country,
    postalCode,
    subdivision,
    latitude,
    longitude,
    timezone,
  },
  ip,
  requestId,
  deploy,
} = Astro.locals.netlify.context;

// Asignando valores predeterminados si alguno de los datos no está disponible
const cityName = city || "Ciudad desconocida";
const countryName = country?.name || "País desconocido";
const countryCode = country?.code || ""; // Asegúrate de extraer el código del país
const postalCodeInfo = postalCode || "Código postal no disponible";
const subdivisionInfo = subdivision?.name || "Subdivisión no disponible";
const userIP = ip || "IP desconocida";
const requestID = requestId || "ID de solicitud desconocido";
const userTimezone = timezone || "Zona horaria desconocida";
const deployContext = deploy?.context || "Despliegue desconocido";
const deployPublished = deploy?.published ? "Publicado" : "No publicado";
const latitudeInfo = latitude || "Latitud desconocida";
const longitudeInfo = longitude || "Longitud desconocida";
---

<Layout>
  <div class="container mx-auto p-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Mostrar la bienvenida con ciudad, país y clima -->
      <h1 class="text-4xl font-bold text-valorant mb-8">
        <a href="" title="contador de visitas gratis">
          <img
            src="https://counter6.optistats.ovh/private/contadorvisitasgratis.php?c=lbcpu9wu5enntlnjmgj444my2jxp55qt"
            title="contador de visitas gratis"
            alt="contador de visitas gratis"
            width="100"
            height="20"
          />
        </a> ¡Bienvenido visitante de {cityName}, {countryName}!
        <span class="text-xl text-gray-500"
          >{new Date().toLocaleDateString()}</span
        >
        {
          countryCode && (
            <img
              src={`https://flagcdn.com/96x72/${countryCode.toLowerCase()}.png`}
              alt={`Bandera de ${countryName}`}
              style="height:2em;"
            />
          )
        }
      </h1>

      <!-- Mostrar detalles adicionales del contexto -->
      <p class="text-lg text-gray-700">
        Información adicional:
        <ul>
          <li><strong>IP del usuario:</strong> {userIP}</li>
          <li><strong>ID de solicitud:</strong> {requestID}</li>
          <li><strong>Zona horaria:</strong> {userTimezone}</li>
          <li><strong>Latitud:</strong> {latitudeInfo}</li>
          <li><strong>Longitud:</strong> {longitudeInfo}</li>
          <li><strong>Código Postal:</strong> {postalCodeInfo}</li>
          <li><strong>Subdivisión:</strong> {subdivisionInfo}</li>
        </ul>
      </p>

      <!-- Mostrar información de despliegue -->
      <p class="text-lg text-gray-700">
        <strong>Despliegue:</strong>
        {deployContext} ({deployPublished})
      </p>

      <!-- Enlaces a otras páginas componente CardApis.astro -->
      <CardApis
        href="/valorant"
        imageSrc={bannerValo}
        imageAlt="Valorant Banner api"
        title="Valorant"
        description="Explora todo lo relacionado a Valorant."
      />
      <CardApis
        href="/dummy"
        imageSrc={bannerDummyw}
        imageAlt="DummyJSON"
        title="DummyJSON"
        description="Explora el contenido de DummyJSON."
      />
      <CardApis
        href="/rickandmorty"
        imageSrc={bannerRam}
        imageAlt="La API de Rick y Morty"
        title="The Rick and Morty API"
        description="Explora el contenido de The Rick and Morty API."
      />
      <CardApis
      href="/node"
      imageSrc={bannerNode}
      imageAlt="Api Node"
      title="Api conectada a Node+Express+MongoDB"
      description="Explora el contenido de la Api conectada a Node+Express+MongoDB."
    />
      <CardApis
        href="/"
        imageSrc={bannerZzz}
        imageAlt="ZZZ"
        title="ZZZ"
        description="Explora el contenido de ZZZ."
      />
    </div>
  </div>
</Layout>
