---
interface Props {
  uuid: string;
  displayName: string;
  displayNameSingular: string;
  displayIcon: string;
  largeIcon: string;
  rewardPreviewIcon: string;
}

const { uuid, displayName, displayNameSingular, displayIcon, largeIcon, rewardPreviewIcon } = Astro.props;
---

<div class="bg-valorant-dark p-4 rounded-lg shadow-lg block hover:shadow-2xl transition-shadow duration-300">
  <h2 class="text-2xl font-semibold text-valorant hover:underline">{displayName}</h2>
  <img src={displayIcon} alt={displayName} class="w-full h-48 object-contain mb-4 rounded-lg" loading="lazy" />
  <p class="text-lg">Singular: {displayNameSingular}</p>
  <img src={largeIcon} alt={`${displayName} large icon`} class="w-full h-48 object-contain mb-4 rounded-lg" loading="lazy" />
  <img src={rewardPreviewIcon} alt={`${displayName} reward preview`} class="w-full h-48 object-contain mb-4 rounded-lg" loading="lazy" />
</div>
