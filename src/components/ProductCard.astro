---
interface Props {
  id: number;
  title: string;
  description: string;
  price: number;
  thumbnail: string;
}

const { id, title, description, price, thumbnail } = Astro.props;
---

<a href={`/dummy/products/${id}`} class="bg-valorant-dark p-4 rounded-lg shadow-lg block hover:shadow-2xl transition-shadow duration-300">
  <h2 class="text-2xl font-semibold text-valorant hover:underline">{title}</h2>
  <img src={thumbnail} alt={title} class="w-full h-48 object-contain mb-4 rounded-lg" loading="lazy" />
  <p class="text-lg">{description}</p>
  <p class="text-lg font-bold">${price}</p>
</a>
