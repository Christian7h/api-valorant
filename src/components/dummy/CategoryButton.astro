---
interface Props {
  slug: string;
  name: string;
}

const { slug, name } = Astro.props;
---

<a href={`/dummy/products/category/${slug}`} class="bg-valorant-dark p-2 rounded-lg shadow-lg block hover:shadow-2xl transition-shadow duration-300 text-center">
  <span class="text-valorant hover:underline">{name}</span>
</a>
